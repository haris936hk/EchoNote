# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/echonote?schema=public"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Google OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Groq API (for Mistral-7B Summarization)
GROQ_API_KEY="your-groq-api-key"

# Resend API (for Email Notifications)
RESEND_API_KEY="your-resend-api-key"
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# Frontend URL (CORS)
FRONTEND_URL="http://localhost:3000"

# Server Configuration
PORT=5000
NODE_ENV="development"

# File Upload Limits
MAX_FILE_SIZE_MB=50
MAX_RECORDING_DURATION_SECONDS=180

# Supabase Storage (Optional - for audio file hosting)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Python Scripts Configuration
PYTHON_PATH="python"
WHISPER_MODEL="base.en"

# Audio Processing Settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
