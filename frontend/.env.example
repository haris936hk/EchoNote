# Frontend Environment Variables (.env.example)

# ============================================
# API CONFIGURATION
# ============================================
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_BASE_URL=http://localhost:5000

# ============================================
# GOOGLE OAUTH CONFIGURATION
# ============================================
# Must match backend Google Client ID
REACT_APP_GOOGLE_CLIENT_ID=792610664211-0jsdfnneaqsu6o3qdq8jges89kf59us5.apps.googleusercontent.com

# ============================================
# RECORDING CONFIGURATION
# ============================================
REACT_APP_MAX_RECORDING_DURATION=180000
# 3 minutes in milliseconds (180,000ms)
REACT_APP_AUDIO_MIME_TYPE=audio/webm
# Browser-supported format

# ============================================
# UI CONFIGURATION
# ============================================
REACT_APP_THEME=dark
# Options: dark, light
REACT_APP_ITEMS_PER_PAGE=10
# Pagination

# ============================================
# FEATURE FLAGS
# ============================================
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG=false
# Show debug info in console

# ============================================
# APP METADATA
# ============================================
REACT_APP_NAME=EchoNote
REACT_APP_VERSION=1.0.0
REACT_APP_SUPPORT_EMAIL=support@echonote.app